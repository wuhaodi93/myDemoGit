<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.net.gxht.cms.query.dao.QueryDao">
    <select id="findUserQueryRecord" resultType="cn.net.gxht.cms.query.entity.QueryUserInfo">
        SELECT
        name,
        id,
        cardNo,
        phone,
        qq query_qq,
        email query_email,
        infoFilePath,
        queryBy,
        createTime
        from cms_queryUserInfo
        <where>
            <if test="id!=null and id!=''">
                id=#{id}
            </if>
            <if test="name!=null and name!=''">
                AND name LIKE concat(concat('%',#{name}),'%')
            </if>
            <if test="idCard!=null and idCard!=''">
                AND CardNo LIKE concat(concat('%',#{idCard}),'%')
            </if>
            <if test="phone!=null and phone!=''">
                AND phone LIKE concat(concat('%',#{phone}),'%')
            </if>
        </where>
         order by createTime desc
        limit #{page.startIndex},
        #{page.pageSize}
    </select>
    <select id="getAmount" resultType="java.lang.Integer">
        SELECT count(*) FROM cms_queryUserInfo;
    </select>
    <select id="findPhoneQueryRecord" resultType="cn.net.gxht.cms.query.entity.QueryPhone">
        SELECT
        sn,
        createTime,
        queryBy,
        infoFilePath
        FROM cms_queryPhone
        <where>
            <if test="sn!=null and sn!=''">
                sn=#{sn}
            </if>
        </where>
        order by createTime desc
        limit #{page.startIndex},
        #{page.pageSize}
    </select>
    <select id="getPhoneAmount" resultType="java.lang.Integer">
        SELECT count(*) FROM cms_queryPhone <where>
        <if test="sn!=null and sn!=''">
            sn=#{sn}
        </if>
        </where>
    </select>
</mapper>